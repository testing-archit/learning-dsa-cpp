{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run with IO",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "clang++ -std=c++17 -stdlib=libc++ -g ${file} -o ${fileDirname}/${fileBasenameNoExtension} && ${fileDirname}/${fileBasenameNoExtension} < ${fileDirname}/input.txt > ${fileDirname}/output.txt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "never",        // don't open terminal
        "echo": false,            // don't echo command
        "focus": false,           // don't focus terminal
        "panel": "dedicated",     // use one hidden panel
        "showReuseMessage": false // suppress "Terminal will be reused..." message
      }
    }
  ]
}
